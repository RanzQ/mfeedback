// Start of course page
div(data-role='page', id='course-page', data-theme='a')

  include header

  div(data-role='content')

    ul(data-role='listview', data-inset='true')
          li
            a(href='/course/#{course.id}/feedback') Course feedback
          - if(course.lectures.length > 0)
          li(data-role='list-divider') Lectures
          - each lecture in course.lectures
            li
             a(href='/course/#{course.id}/lecture/#{dateFormat(lecture.date, 'yyyymmdd')}')|#{dateFormat(lecture.date, 'dd mmm yy')}: #{lecture.topic}
             span(class='ui-li-count') #{lecture.feedbacks.length}
          - if(course.assignments.length > 0)
          li(data-role='list-divider') Assignments
          - each assignment in course.assignments
            li(data-role='li-divider')
             a(href='/course/#{course.id}/assignment/#{dateFormat(assignment.deadline, 'yyyymmddHHMM')}')|#{assignment.title} (DL: #{dateFormat(assignment.deadline, 'dd mmm yy')})
          - if(course.exams.length > 0)
          li(data-role='list-divider') Exams
          - each exam in course.exams
            li(data-role='list-divider'): a(href='/course/#{course.id}/exam/#{dateFormat(exam.date, 'yyyymmdd')}')|Exam: #{dateFormat(exam.date, 'dd mmm yy')}

    ul(data-role='listview', data-inset='true'): li: a(href='/course/#{course.id}/show_feedback') Show feedback 


 // /content

// End of course page

